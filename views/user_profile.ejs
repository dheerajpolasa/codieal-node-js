<link rel="stylesheet" href="/css/user_profile.css">
<h1> Home Page <%= title %></h1>

<p>Welcome to DP | Home Page</p>

<img src="<%= profile_user.avatar %>" alt="<% profile_user.name %>">

<% if(user.id == profile_user.id) {%>
    <form action="/users/update/<%= profile_user.id%>" method="POST" enctype="multipart/form-data">
        <input type="text" name="name" placeholder="name" value="<%= profile_user.name %>" required>
        <input type="email" name="email" placeholder="email" value="<%= profile_user.email %>" required>
        <input type="file" name="avatar" placeholder="Profile Picture">
        <input type="submit" value="update">
    </form>
<%}else{%>
    <p class="para"><%= profile_user.name%></p>
    <p><%= profile_user.email %></p>
<%}%>

<button> <a href="/users/sign-out" style="text-decoration: none;"> Sign Out </a> </button>